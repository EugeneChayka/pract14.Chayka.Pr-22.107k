<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="225dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/_2"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="28dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="350dp"
        android:layout_height="398dp"
        app:srcCompat="@drawable/untitled"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="452dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Статистика"
        android:textColor="#4A5681"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="249dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Помощь тренера"
        android:textColor="#4A5681"
        android:textSize="28sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="336dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Советы"
        android:textColor="#4A5681"
        android:textSize="24sp"
        android:textStyle="normal"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="452dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Упражнения"
        android:textColor="#4A5681"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="170dp" />

    <Button
        android:id="@+id/btnMenu1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:backgroundTint="#D37A57"
        android:onClick="onClick"
        android:text="Меню"
        android:textColor="#4A5681"
        android:textSize="10sp"
        app:cornerRadius="20dp"
        app:icon="@drawable/fill_1"
        app:iconGravity="top"
        app:iconPadding="2dp"
        app:iconSize="35dp"
        app:iconTint="#4A5681"
        tools:layout_editor_absoluteX="296dp"
        tools:layout_editor_absoluteY="28dp" />

    <Button
        android:id="@+id/btnStatistics"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:backgroundTint="#D37A57"
        android:onClick="onClick"
        app:cornerRadius="20dp"
        app:icon="@drawable/stats_chart_increase_icon_178303"
        app:iconGravity="textTop"
        app:iconSize="50dp"
        app:iconTint="@color/black"
        tools:layout_editor_absoluteX="296dp"
        tools:layout_editor_absoluteY="227dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:backgroundTint="#D37A57"
        android:onClick="onClick"
        app:cornerRadius="20dp"
        app:icon="@drawable/trainer_man_people_avatar_person_icon_224850"
        app:iconGravity="textTop"
        app:iconSize="50dp"
        app:iconTintMode="multiply"
        tools:layout_editor_absoluteX="296dp"
        tools:layout_editor_absoluteY="312dp" />

    <Button
        android:id="@+id/btnWorkout"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:backgroundTint="#D37A57"
        android:onClick="onClick"
        app:cornerRadius="20dp"
        app:icon="@drawable/_8464"
        app:iconGravity="textTop"
        app:iconSize="50dp"
        app:iconTint="@color/black"
        tools:layout_editor_absoluteX="296dp"
        tools:layout_editor_absoluteY="147dp" />
</androidx.constraintlayout.widget.ConstraintLayout>